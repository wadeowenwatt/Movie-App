<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.movieapp.presentation.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.movieapp.fragment.UserFragment"
        android:label="UserFragment" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.movieapp.fragment.FavouriteFragment"
        android:label="FavouriteFragment" />
    <fragment
        android:id="@+id/ticketFragment"
        android:name="com.example.movieapp.fragment.TicketFragment"
        android:label="TicketFragment" />
    <fragment
        android:id="@+id/shuffleFragment"
        android:name="com.example.movieapp.fragment.ShuffleFragment"
        android:label="fragment_shuffle"
        tools:layout="@layout/fragment_shuffle" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.movieapp.presentation.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.movieapp.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="query"
            android:defaultValue="a"
            app:argType="string" />
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>